<Window
    x:Class="PalletScanner.UI.View.RotaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    Width="1250"
    Height="760"
    Icon="/Assets/App.ico"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style x:Key="ViewWrapperButtonStyle" TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="Transparent">
                            <Grid>
                                <ContentPresenter
                                    x:Name="MyContentPresenter"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value=".8" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value=".6" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border
        Margin="20"
        Padding="0"
        Background="#F2F2F2"
        CornerRadius="8">

        <Grid ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="160" />
                <RowDefinition Height="260" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Margin="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal">
                    <Border
                        Width="98"
                        Height="50"
                        Margin="16"
                        HorizontalAlignment="Right"
                        Background="#079455"
                        BorderThickness="0"
                        CornerRadius="8">
                        <Button
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Command="{Binding StartCommand}"
                            Style="{StaticResource ViewWrapperButtonStyle}">
                            <TextBlock Foreground="White" Text="Start" />
                        </Button>
                    </Border>
                    <Border
                        Width="98"
                        Height="50"
                        Margin="16"
                        HorizontalAlignment="Right"
                        Background="#F04438"
                        BorderThickness="0"
                        CornerRadius="8">
                        <Button
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Command="{Binding StopCommand}"
                            Style="{StaticResource ViewWrapperButtonStyle}">
                            <TextBlock Foreground="White" Text="Stop" />
                        </Button>
                    </Border>
                </StackPanel>
            </Grid>

            <Border
                Grid.Row="1"
                Grid.Column="0"
                Height="70"
                Margin="20"
                Padding="4"
                Background="White"
                CornerRadius="4">
                <Grid Height="60" HorizontalAlignment="Stretch">
                    <Rectangle
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Fill="{Binding ConveyorListColor}"
                        RadiusX="4"
                        RadiusY="4" />

                    <TextBlock
                        Padding="16,10,0,10"
                        VerticalAlignment="Center"
                        Foreground="{Binding ConveyorTextColor}"
                        Text="{Binding TopPalletBarcode}" />

                    <TextBlock
                        Padding="0,10,16,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="{Binding ConveyorTextColor}"
                        Text="{Binding TopPalletFailureMessage}" />
                </Grid>
            </Border>

            <Border
                Grid.Row="2"
                Grid.Column="0"
                Height="70"
                Margin="20"
                Padding="4"
                Background="White"
                CornerRadius="4">
                <Grid Height="60" HorizontalAlignment="Stretch">
                    <Rectangle
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Fill="{Binding ConveyorListColor}"
                        RadiusX="4"
                        RadiusY="4" />

                    <TextBlock
                        Padding="0,10,16,10"
                        VerticalAlignment="Center"
                        Foreground="{Binding ConveyorTextColor}"
                        Text="{Binding BottomPalletBarcode}" />

                    <TextBlock
                        Padding="16,10,0,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="{Binding ConveyorTextColor}"
                        Text="{Binding BottomPalletFailureMessage}" />
                </Grid>
            </Border>

            <Canvas
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="400"
                Height="600"
                Margin="575,0,0,0"
                HorizontalAlignment="Left">
                <Image Source="/Assets/ScaledPalletStack.png" />
            </Canvas>
            <Grid
                Grid.Row="4"
                Grid.Column="2"
                Margin="0"
                VerticalAlignment="Bottom">
                <Border
                    Width="98"
                    Height="50"
                    Margin="16"
                    HorizontalAlignment="Right"
                    Background="#344054"
                    BorderThickness="0"
                    CornerRadius="8">
                    <Button
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Window_Close"
                        Style="{StaticResource ViewWrapperButtonStyle}">
                        <TextBlock Foreground="White" Text="Done" />
                    </Button>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
